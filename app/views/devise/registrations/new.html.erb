<div class="card">
  <div class="card-header p-3">
    <h5 class="card-title text-center">Registre-se</h5>
  </div>
  <div class="card-body p-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-floating mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'floatingInput', placeholder: 'E-mail' %>
            <%= f.label :email, 'E-mail' %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: 'floatingInput', placeholder: 'Senha' %>
            <%= f.label :password, 'Senha' %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: 'floatingInput', placeholder: 'Confirmar Senha' %>
            <%= f.label :password_confirmation, 'Confirmar Senha' %>
          </div>

          <div class="actions">
            <div class='col-md-12 text-end'>
              <%= link_to "Voltar", root_path, class: 'btn btn-secondary' %>
              <%= f.submit "Registrar", class: 'btn btn-primary ms-1' %>
            </div>
          </div>
      <% end %>
  </div>
</div>

